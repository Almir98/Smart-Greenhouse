@using SmartGreenhouse.Database;
@using SmartGreenhouse.ViewModel;

@model List<HumidityVM>


<div class="row bg-title">
    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
        <p>
            <strong style="margin:auto">VLAŽNOST ZRAKA</strong>
        </p>
    </div>
</div>

@* 2 boxa  *@
<div class="row">
    <div class="col-lg-4 col-sm-6 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Trenutna vlažnost zraka</h3>
            <ul class="list-inline two-part">
                <li>
                    <div id="sparklinedash"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-up text-success"></i> <span class="counter text-success">659</span></li>
            </ul>
        </div>
    </div>
    <div class="col-lg-4 col-sm-6 col-xs-12">
        <div class="white-box analytics-info">
            <h3 class="box-title">Optimalna vlažnost zraka</h3>
            <ul class="list-inline two-part">
                <li>
                    <div id="sparklinedash2"></div>
                </li>
                <li class="text-right"><i class="ti-arrow-up text-purple"></i> <span class="counter text-purple">869</span></li>
            </ul>
        </div>
    </div>
</div>


@* GRAFIKON *@

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="white-box">
            <h3 class="box-title">Grafički prikaz vrijednosti vlažnosti</h3>
            <div id="ct-visits" style="height: 405px;"></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="white-box">
            <div class="col-md-3 col-sm-4 col-xs-6 pull-right">
            </div>

            <h3 class="box-title">Tabelarni prikaz vrijednosti vlažnosti</h3>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Datum pohrane vrijednosti</th>
                            <th>Izmjerenje vlažnost zraka</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="txt-oflo">@item.InsertDate</td>
                                <td class="txt-oflo">@item.Humidity</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>